#define F_CPU 8000000
#include <avr/io.h>
#include <util/delay.h>

int main(void)
{   char i1=0;
	DDRB=0x00;
	DDRA=0b00001000;	
    while(1){
        if (PA3==1) {		
			    if (i1==0) {
				  PORTB=1;				
			    } else if (i1<7) PORTB=PORTB<<1; 
			else if (i1==8) {PORTB=0; PORTA=_BV(2);}
				else if (i1==9) {PORTB=0; PORTA=~_BV(2); PORTA=_BV(5); i1=-1;}		
			i1++;
			_delay_ms(250);
		} 
    }
}
